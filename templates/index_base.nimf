#? stdtmpl(subsChar = '$', metaChar = '#')
#proc generateIndexHtml(siteTitle, siteUrl: string, sortedPageConfigList: seq): string =
#  result = ""
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
    <title>
      $siteTitle
    </title>

  <link rel="shortcut icon" type="image/png" href="$siteUrl/static/image/icon.png">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link id="style" rel="stylesheet" type="text/css" href="main.css">
</head>

<h1>$siteTitle</h2>

<ul>
#for items in sortedPageConfigList:
  <li><a href="$siteUrl/content/$items.filename/index.html">$items.date $items.title<a></li>
#end for
</ul>

<div class="footer">
  <a href="/">$siteTitle</a> | built in Nim
</div>
